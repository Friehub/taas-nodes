{
    "name": "@friehub/truth-node",
    "version": "1.0.5",
    "private": true,
    "description": "Official TaaS Protocol Node: Sentinel & Challenger Client",
    "keywords": [
        "taas",
        "oracle",
        "blockchain",
        "sentinel",
        "challenger",
        "helios"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "friehub-truth-node": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "bundle": "ncc build src/index.ts -o dist/bundle --minify --no-cache && cp package.json dist/bundle/",
        "start:challenger": "NODE_MODE=challenger node dist/index.js",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "test:connection": "ts-node src/scripts/test-connection.ts",
        "lint": "eslint src --ext .ts"
    },
    "dependencies": {
        "@friehub/recipes": "workspace:*",
        "@friehub/execution-engine": "workspace:*",
        "@friehub/taas-sdk": "workspace:*",
        "@types/cors": "^2.8.19",
        "axios": "^1.13.5",
        "bullmq": "^5.1.1",
        "combined-stream": "^1.0.8",
        "cors": "^2.8.6",
        "debug": "^4.4.3",
        "dotenv": "^16.3.1",
        "express": "^4.22.1",
        "finalhandler": "^2.1.1",
        "follow-redirects": "^1.15.11",
        "form-data": "^4.0.5",
        "ioredis": "^5.3.2",
        "pino": "^10.3.1",
        "prom-client": "^15.1.3",
        "viem": "^2.7.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.19",
        "@types/pino": "^7.0.5",
        "pino-pretty": "^13.1.3",
        "pm2": "^6.0.14",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}