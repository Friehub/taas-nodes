{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "paths": {
            "@friehub/data-feeds": [
                "../data-feeds/dist"
            ],
            "@friehub/recipes": [
                "../recipes/dist"
            ],
            "@friehub/execution-engine": [
                "../execution-engine/dist"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "templates"
    ]
}