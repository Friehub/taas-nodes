{
    "manifest_version": 3,
    "name": "TaaS Sentinel Lite",
    "version": "1.0.0",
    "description": "Run a lightweight TaaS Truth Node directly in your browser.",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}